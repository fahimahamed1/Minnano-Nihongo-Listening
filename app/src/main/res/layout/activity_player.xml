<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Album art placeholder -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="180dp">

            <View
                android:background="@drawable/bg_card"
                android:alpha="0.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:text="ðŸŒ¸"
                android:textSize="80sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="32dp"
            android:textColor="@color/playerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/subtitle"
            android:text="Minna no Nihongo"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#80FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Lesson progress indicator -->
        <TextView
            android:id="@+id/lessonIndicator"
            android:text="Lesson 1 / 50"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#60FFFFFF"
            android:background="#20FFFFFF"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <!-- Developer credit -->
        <TextView
            android:text="by Fahim Ahamed &amp; Fahad Ahamed"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#40FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Progress section -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/seekBar"
            android:progressDrawable="@drawable/bg_seekbar_progress"
            android:thumb="@drawable/ic_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/timeCurrent"
                android:text="00:00"
                android:textSize="12sp"
                android:textColor="#80FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/time"
                android:text="00:00"
                android:textSize="12sp"
                android:textColor="#80FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Lesson Navigation -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/prevLesson"
            android:text="â—€ Prev Lesson"
            android:textSize="11sp"
            android:textColor="#90FFFFFF"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/nextLesson"
            android:text="Next Lesson â–¶"
            android:textSize="11sp"
            android:textColor="#90FFFFFF"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- Controls -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingBottom="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/prev"
            android:text="â®"
            style="@style/PlayerButton"
            android:layout_width="64dp"
            android:layout_height="64dp"/>

        <Button
            android:id="@+id/play"
            android:text="â–¶"
            style="@style/PlayerButtonLarge"
            android:layout_marginHorizontal="24dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/pause"
            android:text="â¸"
            android:visibility="gone"
            style="@style/PlayerButtonLarge"
            android:layout_marginHorizontal="24dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/next"
            android:text="â­"
            style="@style/PlayerButton"
            android:layout_width="64dp"
            android:layout_height="64dp"/>

    </LinearLayout>

</LinearLayout>